<UserControl x:Class="MatchRateAppliation.FightControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="69" d:DesignWidth="461">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <TextBlock Text="{Binding Path=Fighter1.Name}" TextWrapping="Wrap" Style="{StaticResource PhoneTextExtraLargeStyle}" Margin="12,0,125,35" FontSize="28" />
        <TextBlock Text="{Binding Path=Fighter2.Name}" FontSize="28" Margin="12,35,125,0" Style="{StaticResource PhoneTextExtraLargeStyle}" TextWrapping="Wrap" />
        <Image Height="67" HorizontalAlignment="Center" Margin="347,0,61,2" Name="image1" Stretch="None" VerticalAlignment="Center" Width="53" Source="/MatchRateAppliation;component/Images/like.png" />
        <Image Height="67" HorizontalAlignment="Center" Margin="400,2,0,0" Name="image2" Stretch="None" VerticalAlignment="Center" Width="49" Source="/MatchRateAppliation;component/Images/dislike.png" />
    </Grid>
</UserControl>
